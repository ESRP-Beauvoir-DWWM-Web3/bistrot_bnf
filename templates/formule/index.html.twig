{% extends 'base.html.twig' %}

{% block title %}Gestion des formules
{% endblock %}

{% block body %}
	<div class="page">
		<h1>liste des formules</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Prix</th>
					<th>Photo</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for formule in formules %}
					<tr>
						<td>{{ formule.id }}</td>
						<td>{{ formule.nom }}</td>
						<td>{{ formule.description }}</td>
						<td>{{ formule.prix }}</td>
						<td>{{ formule.photo }}</td>
						<td>
							<a href="{{ path('app_formule_show', {'id': formule.id}) }}">show</a>
							<a href="{{ path('app_formule_edit', {'id': formule.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_formule_new') }}">Create new</a>

