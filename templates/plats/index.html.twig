{% extends 'base.html.twig' %}

{% block title %}Plats index
{% endblock %}

{% block body %}
	<div class="page">
		<h1>Plats index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Categorie</th>
					<th>Prix</th>
					<th>Photo</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for plat in plats %}
					<tr>
						<td>{{ plat.id }}</td>
						<td>{{ plat.nom }}</td>
						<td>{{ plat.description }}</td>
						<td>{{ plat.categorie }}</td>
						<td>{{ plat.prix }}</td>
						<td>{{ plat.photo }}</td>
						<td>
							<a href="{{ path('app_plats_show', {'id': plat.id}) }}">show</a>
							<a href="{{ path('app_plats_edit', {'id': plat.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_plats_new') }}" class="btn btn-primary">Cr√©er un plat</a>
	</div>
{% endblock %}
