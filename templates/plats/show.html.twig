	<div class="page">
		<h1>Plats</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ plat.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ plat.nom }}</td>
				</tr>
